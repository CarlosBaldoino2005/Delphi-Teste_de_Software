unit Components.Connections.Firedac;

interface

uses
  Connections.Interfaces,
  FireDAC.Stan.Intf,
  FireDAC.Stan.Option,
  FireDAC.Stan.Error,
  FireDAC.UI.Intf,
  FireDAC.Phys.Intf,
  FireDAC.Stan.Def,
  FireDAC.Stan.Pool,
  FireDAC.Stan.Async,
  FireDAC.Phys,
  FireDAC.Phys.SQLite,
  FireDAC.Phys.SQLiteDef,
  FireDAC.Stan.ExprFuncs,
//  FireDAC.Phys.SQLiteWrapper.Stat,
  FireDAC.VCLUI.Wait,
  FireDAC.DApt,
  Data.DB,
  FireDAC.Comp.Client,
  FireDAC.Stan.Param,
  System.Classes;

type
  TConnectionsFiredac = class(TInterfacedObject, iConnections)
    private
      FConnection : TFDConnection;
      FQuery : TFDQuery;
    public
      constructor Create;
      destructor Destroy; override;
      class function New : iConnections;
      function Active ( aValue : Boolean ) : iConnections;
      function AddParam ( aParam : String; aValue : Variant ) : iConnections; overload;
      function AddParam ( aParam : String; aValue : TPersistent ) : iConnections; overload;
      function DataSet : TDataSet;
      function ExecSQL : iConnections;
      function Open : iConnections;
      function SQL ( aValue : String ) : iConnections;
      function SQLClear : iConnections;
  end;

implementation

{ TConnectionsFiredac }

function TConnectionsFiredac.Active( aValue : Boolean ) : iConnections;
begin
  Result := Self;
  FQuery.Active := aValue;
end;

function TConnectionsFiredac.AddParam(aParam: String;
  aValue: Variant): iConnections;
begin
  Result := Self;
  FQuery.ParamByName(aParam).Value := aValue;
end;

function TConnectionsFiredac.AddParam(aParam: String;
  aValue: TPersistent): iConnections;
begin
  Result := Self;
  FQuery.ParamByName(aParam).Assign(aValue);
end;

constructor TConnectionsFiredac.Create;
begin
  FConnection := TFDConnection.Create(nil);
  FQuery := TFDQuery.Create(nil);
  FQuery.Connection := FConnection;
  FConnection.Params.DriverID := 'SQLite';
  FConnection.Params.Database := 'C:\Users\thuli\Desktop\Semana Refatoração\Refactor\database\refactordb.db3';
  FConnection.Params.Add('LockingMode=Normal');
  FConnection.Connected;
end;

function TConnectionsFiredac.DataSet: TDataSet;
begin
  Result := FQuery;
end;

destructor TConnectionsFiredac.Destroy;
begin
  FQuery.DisposeOf;
  FConnection.DisposeOf;
  inherited;
end;

function TConnectionsFiredac.ExecSQL: iConnections;
begin
  Result := Self;
  FQuery.ExecSQL;
end;

class function TConnectionsFiredac.New: iConnections;
begin
  Result := Self.Create;
end;

function TConnectionsFiredac.Open: iConnections;
begin
  Result := Self;
  FQuery.Open;
end;

function TConnectionsFiredac.SQL( aValue : String ) : iConnections;
begin
  Result := Self;
  FQuery.SQL.Add(aValue);
end;

function TConnectionsFiredac.SQLClear: iConnections;
begin
  Result := Self;
  FQuery.SQL.Clear;
end;

end.
